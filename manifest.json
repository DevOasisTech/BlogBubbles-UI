{
    "manifest_version": 3,
    "name": "BlogBubbles",
    "version": "1.0",
    "description": "Annotate and comment on web pages",
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus", 
      "identity",
      "scripting",
      "sidePanel"
    ],
    "action": {
      "default_title": "Action Button"
    },
    "background": {
      "service_worker": "service_worker/background.js"
    },
    "side_panel": {
      "default_path": "sidepanel-global.html"
    },
    "web_accessible_resources": [
      {
        "resources": ["modal/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }