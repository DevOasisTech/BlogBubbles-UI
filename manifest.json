{
    "manifest_version": 3,
    "name": "OpenInk",
    "version": "1.0",
    "description": "Annotate and comment on web pages",
    "icons": {
      "16": "icons/48.png",
      "48": "icons/48.png",
      "128": "icons/48.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus", 
      "identity",
      "scripting"
    ],
    "action": {
      "default_icon": {             
        "16": "icons/48.png"  
      },
      "default_title": "OpenInk"
    },
    "background": {
      "service_worker": "service_worker/background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["components/*", "styles/*", "javascripts/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }