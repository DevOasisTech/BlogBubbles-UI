{
    "manifest_version": 3,
    "name": "OpenInk",
    "version": "1.0",
    "description": "Annotate and comment on web pages",
    "icons": {
      "16": "icons/48.png",
      "48": "icons/48.png",
      "128": "icons/48.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/tooltip.js"]
      },
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/onPageLoad.js"]
      },
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/addCommentSection.js"]
      },
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/showComment.js"]
      },
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/highlightAnchorText.js"]
      }         
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "webRequest",
      "activeTab",
      "contextMenus", 
      "identity",
      "scripting",
      "storage"
    ],
    "action": {
      "default_icon": {             
        "16": "icons/48.png"  
      },
      "default_title": "OpenInk"
    },
    "background": {
      "service_worker": "service_worker/background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["components/*", "styles/*", "javascripts/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }